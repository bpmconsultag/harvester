# Git attributes for consistent line endings
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Python files
*.py text eol=lf

# Markdown files
*.md text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
